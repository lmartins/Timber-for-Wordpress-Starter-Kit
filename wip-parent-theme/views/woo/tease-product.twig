<article {{ fn('post_class', ['$classes', 'entry'] ) }}>

    {{ fn('timber_set_product', entry)}}

    <div class="Media">

        {% do action('tha_entry_top') %}

        <div class="Media-figure">
            <a href="{{entry.link}}">
                {% if entry.thumbnail %}
                    <img src="{{ entry.thumbnail.src|resize(300, 225) }}" />
                {% else %}
                    <span class="thumb-placeholder"><i class="icon-camera"></i></span>
                {% endif %}
            </a>
        </div>

        <div class="Media-content">
        {{product}}
            {% do action('woocommerce_before_shop_loop_item_title') %}
            <!-- {% if entry.product.is_on_sale %}SALE!{% endif %} -->
            <h2 class="entry-title"><a href="{{entry.link}}">{{entry.title}}</a></h2>
            <!-- <p class="price">{{entry.product.get_price_html}}</p> -->
            {% do action( 'woocommerce_after_shop_loop_item_title' ) %}
            {% do action( 'woocommerce_after_shop_loop_item' ) %}

            <!-- <a href="{{item.product.add_to_cart_url}}" class="button">Add to Cart</a> -->
        </div>

        {% do action('tha_entry_bottom') %}

    </div>

</article>